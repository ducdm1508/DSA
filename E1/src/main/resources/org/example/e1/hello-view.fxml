<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.e1.StudentController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <GridPane hgap="10" vgap="10">
    <Label text="Mã Sinh Viên:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="txtMaSV" promptText="Nhập mã sinh viên" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Họ Tên:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="txtHoTen" promptText="Nhập họ tên" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Điểm Toán:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="txtDiemToan" promptText="Nhập điểm Toán" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Điểm Lý:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="txtDiemLy" promptText="Nhập điểm Lý" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Điểm Hoá:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="txtDiemHoa" promptText="Nhập điểm Hoá" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
  </GridPane>

  <HBox spacing="10" alignment="CENTER">
    <Button text="Thêm Sinh Viên" onAction="#themSinhVien"/>
    <Button text="Sắp Xếp Điểm" onAction="#sapXepDiem"/>
  </HBox>

  <TextArea fx:id="txtDanhSach" editable="false" prefHeight="200"/>
</VBox>