<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.transactionmanager.Controller.MainController"
            prefHeight="400.0" prefWidth="600.0"
            >
    <top>
        <MenuBar layoutX="0.0" layoutY="0.0" prefWidth="600.0">
            <menus>
                <Menu text="Menu">
                    <MenuItem text="Add Transaction" onAction="#handleAddItem" />
                    <MenuItem text="Display Items" onAction="#handleDisplayItems" />
                    <MenuItem text="Show Chart" onAction="#handleShowChart" />
                    <MenuItem text="Close" onAction="#handleExit" />
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <StackPane fx:id="viewItem"></StackPane>
    </center>
</BorderPane>